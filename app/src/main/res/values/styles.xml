<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="main_style_layout">
        <item name="android:background">?attr/colorPrimary</item>>
    </style>

    <style name="text_main" parent="Theme.MaterialComponents.DayNight">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/text_base_size</item>
    </style>

    <style name="cardview_text_small" parent="text_main">
        <item name="android:textColor">?attr/colorControlActivated</item>
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textAppearance">center</item>
    </style>

    <style name="settings_text" parent="text_main">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/paddingHorizontal</item>
        <item name="marginHorizontal">@dimen/margin_16</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="toolbar_text_style" parent="Theme.MaterialComponents.DayNight">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_main_size</item>
    </style>

    <style name="search_edit_text" parent="Theme.MaterialComponents.DayNight">
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawableTint">?attr/colorBackgroundFloating</item>
        <item name="android:drawablePadding">@dimen/margin_8</item>
        <item name="android:hint">@string/search</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">?attr/colorBackgroundFloating</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_base_size</item>
    </style>

    <style name="settings_image" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/dp_12</item>
    </style>

    <style name="search_image_view" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="tint">?attr/colorBackgroundFloating</item>
    </style>

    <style name="cardview_image_small">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ellipse</item>
        <item name="tint">?attr/colorControlActivated</item>
    </style>

    <style name="cardview_btn_select" parent="cardview_image_small">
        <item name="android:src">@drawable/arrow_fwd</item>
    </style>

    <style name="main_style_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_main_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="cardview_style">
        <item name="android:backgroundTint">?colorSecondary</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">
            @android:color/transparent
        </item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@android:color/transparent
        </item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">@dimen/dp_4</item>
    </style>

    <style name="customRoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_pic</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="search_act_message">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/_19sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="search_act_btn_update">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="cornerRadius">@dimen/_56dp</item>
    </style>

    <color name="transparent">#00000000</color>
</resources>